{% extends 'layouts/base.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/public/CSS/app.css">
{% endblock %}

{% block main_content %}
	{% set Images = variantItem.Images[0] %}
		<img src="/public/images/{{ Images.id }}{{ Images.extension }}" />
			{% for image in variant.Images %}
				<img src="/public/images/{{ image.id }}{{ image.extension }}" alt="">
			{% endfor %}
	<h1 class="h1 ">{{ productItem.item }} - {{ variantItem.item }}</h1>
	<strong>Price : </strong>
		<span >${{ variantItem.price }}</span>
	<h6>
		{% if variant.inventory < 10 %}
			Almost Sold Out!
		{% elseif variant.inventory == 0 %}
			Not in Stock
		{% else %}
		{% endif %}
	</h6>
	<p> {{ variantItem.description }} </p>
	<p>
		{% for option in productItem.Variants %}
			{% if option.id == variant.id %}
				{{ option.item }}
			{% else %}
				<a href="/shop/products/{{ productItem.slug }}?v={{ option.slug }}">{{ option.item }}</a>
			{% endif %}
		{% endfor %}
	</p>
	<label>Quantity</label>
		<select name="quantity" id="quantity">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</select>
	<button>Add to cart</button>
    <button>Checkout Now</button>
	
					
{% endblock %}